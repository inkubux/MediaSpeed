{
  "name": "media-speed",
  "version": "0.0.1",
  "description": "An experimental mini media server like plex/emby. It tries to be fast light and easy.",
  "author": "Francis BÃ©langer",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "node dist/bin/www.js",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "dev-frontend": "cd frontend && yarn start",
    "dev-backend": "nodemon src/bin/www.js",
    "dev": "concurrently --kill-others-on-fail \"yarn dev-backend\" \"yarn dev-frontend\"",
    "test": "cross-env NODE_ENV=test jest",
    "cover": "npm run test -- --coverage",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
    "script": "./node_modules/.bin/babel-node",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.13",
    "@ffprobe-installer/ffprobe": "^1.0.8",
    "@koa/cors": "^2.2.1",
    "awilix": "^2.10.0",
    "awilix-koa": "^1.0.2",
    "axios": "^0.17.1",
    "bristol": "^0.3.3",
    "camel-case": "^3.0.0",
    "concurrently": "^3.5.1",
    "epinfer": "^1.1.4",
    "fejl": "^1.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^5.0.0",
    "hh-mm-ss": "^1.2.0",
    "image-downloader": "^3.3.0",
    "keyblade": "^0.3.2",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-respond": "^1.0.1",
    "koa-router": "^7.3.0",
    "koa-static-server": "^1.3.2",
    "lodash": "^4.17.4",
    "lokijs": "^1.5.1",
    "memoized-decorator": "0.0.2",
    "milliseconds-to-iso-8601-duration": "^0.1.0",
    "mongo-querystring": "^4.1.1",
    "moviedb": "^0.2.10",
    "moviedb-api": "0.0.3",
    "p-throttle": "^1.1.0",
    "palin": "^2.2.0",
    "recursive-readdir": "^2.2.1",
    "redux-thunk": "^2.2.0",
    "shorthash": "0.0.2",
    "throttled-queue": "^1.0.5",
    "torrent-name-parser": "^0.6.5",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-source-map-support": "^1.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2",
    "smid": "^0.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 4,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "signal": "SIGHUP",
    "ignore": [
      "frontend/*"
    ],
    "execMap": {
      "js": "babel-node"
    }
  },
  "jest": {
    "mapCoverage": true,
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "src/lib/env",
      "src/bin"
    ]
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread",
      "transform-decorators-legacy"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/__tests__/**"
        ]
      }
    }
  }
}
